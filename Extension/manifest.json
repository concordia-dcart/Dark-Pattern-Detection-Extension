{
  "manifest_version": 3,
  "name": "Dark Pattern Detection",
  "version": "1.2",
  "description": "Takes a snapshot of the current website",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "*://api.openai.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
  }
