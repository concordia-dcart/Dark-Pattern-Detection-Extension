{
  "manifest_version": 3,
  "name": "Website Snapshot",
  "version": "1.0",
  "description": "Takes a snapshot of the current website",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "http://localhost/*"
  ]

}
